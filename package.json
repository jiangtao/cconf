{
  "name": "cconf",
  "version": "0.1.0",
  "description": "Claude Code Config - backup/restore tool",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cconf": "dist/index.js"
  },
  "exports": "./dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && chmod +x dist/index.js",
    "build:bundle": "node esbuild.config.js",
    "build:binary": "node esbuild.config.js && pkg dist/bundle.cjs -t node18-linux-x64,node18-linux-arm64,node18-macos-x64,node18-macos-arm64,node18-win-x64 --output bin/cconf",
    "test": "jest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm run build"
  },
  "pkg": {
    "scripts": ["dist/bundle.cjs"],
    "assets": ["locales/**/*"],
    "targets": ["node18-linux-x64", "node18-linux-arm64", "node18-macos-x64", "node18-macos-arm64", "node18-win-x64"],
    "outputPath": "bin"
  },
  "keywords": [
    "claude",
    "claude-code",
    "config",
    "backup",
    "restore"
  ],
  "author": "jiangtao",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "cli-spinners": "^2.9.2",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "fs-extra": "^11.2.0",
    "i18next": "^24.2.3",
    "inquirer": "^9.3.7",
    "js-yaml": "^4.1.0",
    "ora": "^8.1.1",
    "simple-git": "^3.27.0",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.12.7",
    "@types/tar": "^6.1.13",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "locales",
    "README.md"
  ]
}
